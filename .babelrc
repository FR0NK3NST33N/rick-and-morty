{
    "plugins": [
        ["@babel/plugin-proposal-decorators", { "legacy": true }],
        "transform-class-properties",
        "@babel/plugin-proposal-class-properties",
        "react-hot-loader/babel"
    ],
    "presets": [
        "@babel/react",
        [
            "@babel/env",
            {
                "modules": false,
                "targets": {
                    "browsers": ["last 1 version", "ie >= 11"]
                }
            }
        ]
    ]
}
